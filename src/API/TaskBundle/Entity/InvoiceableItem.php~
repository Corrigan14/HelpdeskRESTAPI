<?php

namespace API\TaskBundle\Entity;

use Doctrine\ORM\Mapping as ORM;
use JMS\Serializer\Annotation as Serializer;
use Symfony\Component\Validator\Constraints as Assert;

/**
 * InvoiceableItem
 *
 * @ORM\Table(name="invoiceable_item")
 * @ORM\Entity(repositoryClass="API\TaskBundle\Repository\InvoiceableItemRepository")
 */
class InvoiceableItem
{
    /**
     * @var int
     *
     * @ORM\Column(name="id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     * @Serializer\ReadOnly()
     */
    private $id;

    /**
     * @var string
     *
     * @ORM\Column(name="title", type="string", length=255)
     * @Assert\NotBlank(message="Title is required")
     * @Assert\Type("string")
     */
    private $title;

    /**
     * @var string
     *
     * @ORM\Column(name="amount", type="decimal", precision=10, scale=2)
     * @Assert\NotBlank(message="Amount is required")
     */
    private $amount;

    /**
     * @var string
     *
     * @ORM\Column(name="unit_price", type="decimal", precision=10, scale=2)
     * @Assert\NotBlank(message="Amount is required")
     */
    private $unit_price;

    /**
     * @var Unit
     *
     * @ORM\ManyToOne(targetEntity="API\TaskBundle\Entity\Unit", inversedBy="invoiceableItems")
     * @ORM\JoinColumn(name="unit_id", referencedColumnName="id", nullable=true)
     * @Serializer\ReadOnly()
     */
    private $unit;

    /**
     * @var Unit
     *
     * @ORM\ManyToOne(targetEntity="API\TaskBundle\Entity\Task", inversedBy="invoiceableItems")
     * @ORM\JoinColumn(name="task_id", referencedColumnName="id", nullable=true)
     * @Serializer\ReadOnly()
     */
    private $task;

    /**
     * Get id
     *
     * @return int
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Set title
     *
     * @param string $title
     *
     * @return InvoiceableItem
     */
    public function setTitle($title)
    {
        $this->title = $title;

        return $this;
    }

    /**
     * Get title
     *
     * @return string
     */
    public function getTitle()
    {
        return $this->title;
    }

    /**
     * Set amount
     *
     * @param string $amount
     *
     * @return InvoiceableItem
     */
    public function setAmount($amount)
    {
        $this->amount = $amount;

        return $this;
    }

    /**
     * Get amount
     *
     * @return string
     */
    public function getAmount()
    {
        return $this->amount;
    }

    /**
     * Set unitPrice
     *
     * @param string $unitPrice
     *
     * @return InvoiceableItem
     */
    public function setUnitPrice($unitPrice)
    {
        $this->unit_price = $unitPrice;

        return $this;
    }

    /**
     * Get unitPrice
     *
     * @return string
     */
    public function getUnitPrice()
    {
        return $this->unit_price;
    }

    /**
     * Set unit
     *
     * @param Unit $unit
     *
     * @return InvoiceableItem
     */
    public function setUnit(Unit $unit = null)
    {
        $this->unit = $unit;

        return $this;
    }

    /**
     * Get unit
     *
     * @return Unit
     */
    public function getUnit()
    {
        return $this->unit;
    }
}
